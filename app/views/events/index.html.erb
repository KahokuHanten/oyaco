<h1>イベント一覧</h1>

<table>
  <thead>
    <tr>
      <th>年月日</th>
      <th>イベント</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_date %></td>
        <td><%= event.event_name %></td>
        <td><%= link_to '参照', event %></td>
        <td><%= link_to '更新', edit_event_path(event) %></td>
        <td><%= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規', new_event_path %>
<%= link_to '戻る', '/' %>
